{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "検版ビューアー",
  "version": "1.0.0",
  "identifier": "com.kenban-viewer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build || exit 0",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "検版ビューアー",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Takumi-2222/KENBAN-viewer/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY1NzhGRjY3NTI5QzVEREMKUldUY1haeFNaLzk0WlNQandGWTRFNWVzbEJ5U0lLelE2UWxJbjdDNUQ0UWF6U0VjUmVzeUVKVTkK"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
